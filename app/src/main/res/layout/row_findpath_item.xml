<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:weightSum="8"
    android:layout_height="200dp">
    <ImageView
        android:src="@drawable/icon_tim_duong_ok"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />
    <LinearLayout
        android:paddingLeft="5dp"
        android:gravity="center"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"

        android:textSize="20sp"
        android:textColor="#f54b42"
        android:text="StartAddress"
        android:id="@+id/txtstartaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <View
            android:background="#e4e5e6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#55a2ff"
            android:text="startLat"
            android:id="@+id/txtstartlat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="#e4e5e6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#55a2ff"
            android:text="startlng"
            android:id="@+id/txtstartlng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="#e4e5e6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#f54b42"
            android:text="endAddress"
            android:id="@+id/txtendaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="#e4e5e6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#55a2ff"
            android:text="endlat"
            android:id="@+id/txtendlat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:background="#e4e5e6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="20sp"
            android:textColor="#55a2ff"
            android:text="endlng"
            android:id="@+id/txtendlng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>