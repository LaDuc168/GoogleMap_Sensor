<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.app_pro.duan.com.duan.sensor.MySensor">

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="Change the background to green when shaking the phone"
            android:textSize="20sp"
            android:textColor="#f12711"
            android:id="@+id/txtSensoritem"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/listViewSensor"
            android:divider="#5593ff"
            android:dividerHeight="1px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>


</LinearLayout>
